
<div class="d-flex justify-content-center">
  <h1><%= @job.title %></h1>
</div>
<div class="card">
  <div class="card-body">
    <div class="row pt-2">
      <p><%= @job.description %></p>
      <div class="d-flex justify-content-between">
        <%= link_to jobs_path, :class => 'btn btn-lg btn-success' do %>
          <i class="fa-solid fa-list"></i>
        <% end %>
        <%= link_to (@job.job_url), :class => 'btn btn-lg  btn-success' do %>
          <i class="fa-solid fa-arrow-up-right-from-square"></i>
        <% end %>
      </div>
    </div>
  </div>
</div>
